<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    tools:context=".ProductDetailUserActivity">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_24" android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Quay lại" />

    <TextView
        android:id="@+id/product_detail_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chi tiết sản phẩm"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1F2A37"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/btnBack"
        app:layout_constraintBottom_toTopOf="@+id/bottom_action_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/product_image_slider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/product_image_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="bottom"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp"
                        app:tabBackground="@drawable/tab_indicator_selector"
                        android:background="@android:color/transparent"
                        android:layout_marginBottom="8dp"/>

                    <ImageButton
                        android:id="@+id/btn_favorite"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_favorite_border_24"
                        android:background="@drawable/button_round_corners"
                        android:backgroundTint="#CCCCCC"
                        android:scaleType="fitCenter"
                        android:padding="8dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Yêu thích"
                        app:tint="@android:color/white"
                        app:cornerRadius="8dp"/>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/product_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"
                tools:text="SingPC AIO i5 - 13.590.000 VND" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/product_detail_or_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/product_detail_price"
                    android:textColor="#F60920"
                    android:textSize="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Màu sắc:"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:chipSpacingHorizontal="6dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_color_grey"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xám"
                    app:chipMinHeight="36dp"
                    app:chipCornerRadius="8dp"
                    app:chipBackgroundColor="@color/chip_background_selector_stylish"
                    android:textColor="@color/chip_text_selector_stylish"
                    app:chipStrokeColor="@color/chip_stroke_selector_stylish"
                    app:chipStrokeWidth="1dp"
                    app:textStartPadding="10dp"
                    app:textEndPadding="10dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_color_white"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trắng"
                    app:chipMinHeight="36dp"
                    app:chipCornerRadius="8dp"
                    app:chipBackgroundColor="@color/chip_background_selector_stylish"
                    android:textColor="@color/chip_text_selector_stylish"
                    app:chipStrokeColor="@color/chip_stroke_selector_stylish"
                    app:chipStrokeWidth="1dp"
                    app:textStartPadding="10dp"
                    app:textEndPadding="10dp" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAM:"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_ram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:chipSpacingHorizontal="6dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_ram_8gb"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 GB"
                    app:chipMinHeight="36dp"
                    app:chipCornerRadius="8dp"
                    app:chipBackgroundColor="@color/chip_background_selector_stylish"
                    android:textColor="@color/chip_text_selector_stylish"
                    app:chipStrokeColor="@color/chip_stroke_selector_stylish"
                    app:chipStrokeWidth="1dp"
                    app:textStartPadding="10dp"
                    app:textEndPadding="10dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_ram_16gb"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16 GB"
                    app:chipMinHeight="36dp"
                    app:chipCornerRadius="8dp"
                    app:chipBackgroundColor="@color/chip_background_selector_stylish"
                    android:textColor="@color/chip_text_selector_stylish"
                    app:chipStrokeColor="@color/chip_stroke_selector_stylish"
                    app:chipStrokeWidth="1dp"
                    app:textStartPadding="10dp"
                    app:textEndPadding="10dp" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ổ cứng:"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_storage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:chipSpacingHorizontal="6dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_storage_256ssd"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SSD 256 GB"
                    app:chipMinHeight="36dp"
                    app:chipCornerRadius="8dp"
                    app:chipBackgroundColor="@color/chip_background_selector_stylish"
                    android:textColor="@color/chip_text_selector_stylish"
                    app:chipStrokeColor="@color/chip_stroke_selector_stylish"
                    app:chipStrokeWidth="1dp"
                    app:textStartPadding="10dp"
                    app:textEndPadding="10dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_storage_512ssd"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SSD 512 GB"
                    app:chipMinHeight="36dp"
                    app:chipCornerRadius="8dp"
                    app:chipBackgroundColor="@color/chip_background_selector_stylish"
                    android:textColor="@color/chip_text_selector_stylish"
                    app:chipStrokeColor="@color/chip_stroke_selector_stylish"
                    app:chipStrokeWidth="1dp"
                    app:textStartPadding="10dp"
                    app:textEndPadding="10dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_storage_1tbssd"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SSD 1 TB"
                    app:chipMinHeight="36dp"
                    app:chipCornerRadius="8dp"
                    app:chipBackgroundColor="@color/chip_background_selector_stylish"
                    android:textColor="@color/chip_text_selector_stylish"
                    app:chipStrokeColor="@color/chip_stroke_selector_stylish"
                    app:chipStrokeWidth="1dp"
                    app:textStartPadding="10dp"
                    app:textEndPadding="10dp" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả sản phẩm:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/product_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"
                tools:text="Mô tả chi tiết về sản phẩm..." />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bình luận sản phẩm:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_comment_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Nhập bình luận của bạn..."
                    android:padding="12dp"
                    android:background="@drawable/edit_text_border"
                    android:minHeight="48dp"
                    android:inputType="textMultiLine"
                    android:maxLines="4"
                    android:imeOptions="actionDone"
                    android:layout_marginEnd="8dp"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/btn_post_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gửi"
                    android:backgroundTint="#007BFF"
                    android:textColor="@android:color/white"
                    app:cornerRadius="8dp"
                    android:minHeight="48dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp"
                tools:listitem="@layout/item_comment"
                tools:itemCount="3"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_add_to_cart"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="THÊM VÀO GIỎ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/white"
            android:textColor="#007BFF"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="8dp"
            app:strokeColor="#007BFF"
            app:strokeWidth="2dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_buy_now"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="MUA NGAY"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#0543F2"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>